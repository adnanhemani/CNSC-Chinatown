%p#notice= notice

= form_tag points_path, :method => :get, :id => 'categories_form' do
  Include: 
  - @all_categories.each do |category|
    = category
    = check_box_tag "categories[#{category}]", 1, @selected_categories.include?(category), :id => "categories_#{category}"
  = submit_tag 'Refresh', :id => 'categories_submit'

%h1 Listing Points of Interest
%table
  %thead
    %tr
      %th Name
      %th Address
      %th Latitude
      %th Longitude
      %th Description
      %th{:class => @category_header}= link_to 'Category', points_path(:categories => @selected_categories), :id => 'category_header'
      %th{:colspan => "3"}
  %tbody
    - @points.each do |point|
      %tr
        %td= point.name
        %td= point.address
        %td= point.latitude
        %td= point.longitude
        %td= point.description
        %td= point.category
        %td= link_to 'Show', point
        %td= link_to 'Edit', edit_point_path(point)
        %td= link_to 'Destroy', point, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Point', new_point_path
