= form_for(@point) do |f|
  - if @point.errors.any?
    #error_explanation
      %h2
        = pluralize(@point.errors.count, "error")
        prohibited this point from being saved:
      %ul
        - @point.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :address
    %br/
    = f.text_field :address
  .field
    = f.label :latitude
    %br/
    = f.text_field :latitude
  .field
    = f.label :longitude
    %br/
    = f.text_field :longitude
  .field
    = f.label :description
    %br/
    = f.text_area :description
  .field
    = f.label :category
    %br/
    = f.select :category, ['Dining', 'Attraction', 'Historical']
  .actions
    = f.submit
